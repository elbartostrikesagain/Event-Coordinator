%h1
  = @main_event.name
%br/
.subnav
  %ul.nav.nav-tabs
    = tab "Home", @main_event
    = tab 'View Calendar', calendar_path(@main_event)
    = tab 'List Events', show_events_path(@main_event)
    -if current_user && current_user.registered_for?(@main_event)
      %li= link_to(raw("<i class='icon-minus-sign'></i> Unregister"), unregister_for_main_event_path(@main_event), :method => :post)
    -else
      %li= link_to(raw("<i class='icon-plus-sign'></i> Register"), register_for_main_event_path(@main_event), :method => :post)
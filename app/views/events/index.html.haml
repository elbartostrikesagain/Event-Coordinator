%h1 Listing events
%table
  %tr
    %th Title
    %th Starts at
    %th Ends at
    %th All day
    %th Description
    %th
    %th
    %th
  - @events.each do |event|
    %tr
      %td= event.title
      %td= event.starts_at
      %td= event.ends_at
      %td= event.all_day
      %td= event.description
      %td= link_to 'Show', event_path()
      %td= link_to 'Edit', edit_event_path(event)
      %td= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete
